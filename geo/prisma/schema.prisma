generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Coordinates {
  id               String             @id @unique @default(uuid())
  street           String?
  cityId           String
  postal_code      String?
  latitude         Float
  longitude        Float
  Coordinates_User Coordinates_User[]
}

model Coordinates_User {
  id            String      @id @unique @default(uuid())
  user_id       String
  coordinate_id String
  date          DateTime    @default(now())
  coordinate    Coordinates @relation(fields: [coordinate_id], references: [id])
}
